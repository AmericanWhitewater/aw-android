<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--Changing the accent color will change the checked color of checkboxes!-->
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Headline1">
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="Text1">
        <item name="android:textColor">@color/font_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:alpha">.78</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">@color/font_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">.54</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="Label1">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/OpenSans-SemiBold.ttf</item>
    </style>

    <style name="Label2">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="Number1">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/OpenSans-SemiBold.ttf</item>
    </style>

    <style name="Number2">
        <item name="android:textSize">34sp</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>
</resources>
