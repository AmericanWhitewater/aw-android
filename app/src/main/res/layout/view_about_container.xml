<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/primary"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close"
            android:layout_marginLeft="20dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_close"/>

        <TextView
            style="@style/Headline1"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="@string/about_title"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mission_tab"
            style="@style/Label1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/mission"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/stewardship_tab"
            style="@style/Label1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/stewardship"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/funding_tab"
            style="@style/Label1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/funding"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/primary"
        android:orientation="horizontal">

        <View
            android:id="@+id/mission_tab_highlight"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:elevation="2dp"/>

        <View
            android:id="@+id/stewardship_tab_highlight"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:elevation="2dp"/>

        <View
            android:id="@+id/funding_tab_highlight"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:elevation="2dp"/>
    </LinearLayout>

    <com.takescoop.americanwhitewaterandroid.view.AboutView
        android:id="@+id/about_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>